<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
<!--1.base-package可以导入多个包,包与包之间使用","隔开
    2.指定的包,ioc容器会查找子包内的所有类
    作用：指定ioc容器去哪些包中找寻注解
 -->
<!--    <context:component-scan base-package="com.example.annotation_01"/>-->

<!--2.指定包,但是排除指定注解-->
<!--    <context:component-scan base-package="com.example.annotation_01">-->
<!--        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Repository"/>-->
<!--        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service"/>-->
<!--    </context:component-scan>-->

<!--指定包,指定所包含的注解-->
    <context:component-scan base-package="com.example.annotation_01" use-default-filters="false">
<!--只扫描包下的注解-->
       <context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
    </context:component-scan>

</beans>